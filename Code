import java.util.Arrays;

public class SmashWords {

	public static String smash(String... words) {
    String answer = "";
    
    for(int i = 0; i<words.length; i++){
      if(i == 0){
        answer= words[i];
      } else if(i > 0 ){
        answer = answer + " " + words[i];
      } 
    }
    
    return answer;
    // TODO Write your code below this comment please
  }
}
